  "devDependencies": {
    "commitizen": "^3.0.2",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "lerna": "^3.4.3"
  },
  "main": "lerna.json",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pojntfx/learn-chinese-platform.git"
  },
  "bugs": {
    "url": "https://gitlab.com/pojntfx/learn-chinese-platform/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "echo 'Generating changelog ...' & conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
    }
  },
  "publishConfig": {
    "access": "public"
  }
